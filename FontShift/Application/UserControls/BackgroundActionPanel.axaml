<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bui="BitsOfNature.UI"
        xmlns:uc="using:FontShift.Application.UserControls">
  <Design.PreviewWith>
    <Border Padding="4" Width="400" Height="400">
        <uc:BackgroundActionPanel />
    </Border>
  </Design.PreviewWith>

  <Style Selector="uc|BackgroundActionPanel">
    <!-- Set Defaults -->
    <Setter Property="Background" Value="{StaticResource TransparentBlack}" />
    
    <Setter Property="Template">
      <ControlTemplate>
        <Grid x:Name="PART_Background" Background="{TemplateBinding Background}" >
          
        </Grid>
      </ControlTemplate>
    </Setter>

  </Style>
</Styles>
